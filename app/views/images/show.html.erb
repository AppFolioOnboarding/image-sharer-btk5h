<main>
  <%= image_tag @image.url %>

  <h2>Tags</h2>
  <% if @image.tag_list.present? %>
    <ul id="tag-list">
      <% @image.tag_list.each do |tag| %>
        <li>
          <%= link_to tag, tag_by_name_path(tag) %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No tags</p>
  <% end %>
</main>
